<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Account Register
      </div>
      <div class="card-body">
        <form action="/signup" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Ingresa tu nombre" value="{{name}}">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Ingresa tu correo" value="{{email}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Ingresa tu password">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="confirma tu password">
          </div>
          <button class="btn btn-primary btn-block">
            Registrarse
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
